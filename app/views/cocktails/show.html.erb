<%# banner %>
<% content_for :nav, render('components/navbar-show') %>

<div class="show-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, crop: :fill %>')">
  <h1 class="title-list"><%= @cocktail.name %></h1>
</div>


<div class="container">
  <div class="row">
    <div class="text-left col-12 col-lg-8 mt-4">
      <h3 >Recipe</h3>
      <ul>
        <% @cocktail.doses.each do |d| %>
          <li>
          <%= d.description %> <%= d.ingredient.name %>   
          <%= link_to dose_path(d), method: :delete do%>
            <i class="far fa-trash-alt" id="deletedose"></i>
          <% end %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="col">
      <h3 class="text-align-right">Ingredient</h3>
      <ul>
        <% @cocktail.doses.each do |d| %>
          <li>
          <%= d.description %> <%= d.ingredient.name %>   
          <%= link_to dose_path(d), method: :delete do%>
            <i class="far fa-trash-alt" id="deletedose"></i>
          <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<br>
    <!-- BACK TO THE LIST -->
<div class="d-flex justify-content-center mt-5">
      <%= link_to root_path, id: "#list", class: 'btn btn-secondary mr-2' do %> 
        <i class="fas fa-angle-left"></i> Back to the list
      <% end %>

      <!-- DELETE COCKTAIL -->
      <%= link_to cocktail_path(@cocktail), method: :delete, data: {confirm: "tsss sure?"}, class: 'btn btn-danger mr-2' do %> 

        <i class="far fa-trash-alt"></i> Delete cocktail
      <% end %>

      <!-- ADD A DOSE -->
      <%= link_to new_cocktail_dose_path(@cocktail), class: 'btn btn-warning' do %>
        <i class="fas fa-plus"></i> Add a new dose
      <% end %> 
</div>

