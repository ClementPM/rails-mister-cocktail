
  <h1 class="title-list"><%= @cocktail.name %></h1>

  <div class="show_flex">
      <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
    <ul>
      <li>
          <% @cocktail.doses.each do |d| %>
            <%= d.description %> => <%= d.ingredient.name %>  
              
            <%= link_to dose_path(d), method: :delete do%>
              <i class="far fa-trash-alt"></i>
            <% end %>
          <% end %>
      </li>
    </ul>
  </div>
<p>
  <!-- BACK TO THE LIST -->
  <div class="buttons">
    <%= link_to root_path, class: 'btn btn-secondary' do %> 
      <i class="fas fa-angle-left"></i> Back to the list
    <% end %>

    <!-- DELETE COCKTAIL -->
    <%= link_to cocktail_path(@cocktail), method: :delete, data: {confirm: "tsss sure?"}, class: 'btn btn-danger' do %> 

      <i class="far fa-trash-alt"></i> Delete cocktail
    <% end %>

    <!-- ADD A DOSEL -->
    <%= link_to new_cocktail_dose_path(@cocktail), class: 'btn btn-warning' do %>
      <i class="fas fa-plus"></i> Add a new dose
    <% end %> 
  </div>
</p>
