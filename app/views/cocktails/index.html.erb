
<div class="home-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1590423859012-39c5ee2845bd?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2734&q=80);">


  <div class="banner-txt">  
    <h1><%= link_to "Mister cocktail", "#list" %></h1>
    <p>
      <h2><span id="typed-strings"></span></h2>
    </p>
  </div> 
    <div class="chevron">
      <a href="#list">
        <p><i class="fas fa-chevron-down"></i></p>
      </a>
  </div>
</div>

<div class="container">
  <div class="navbar" id="list">      
    <%= link_to new_cocktail_path do %> 
      <i class="fas fa-plus"></i> Add Cocktail 
    <% end %> 
  </div>
      <%# DISPLAYING CARDS %>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-lg-4">
        <div class="cocktail-card-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%=   cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
          <div class="cocktail-card-name">
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>  
</div>